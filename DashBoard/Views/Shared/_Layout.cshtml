@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header>
        <div class="toggle-btn">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <a class="navbar-brand" style="color:white">Data Visualization Tool</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"></a>
                </li>


                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <li class="nav-item dropdown user-container">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                <div class="user-details">
                                    <img src="~/Content/images/user.png" />
                                    <span style="color:white">@User.Identity.GetUserName()</span>
                                </div>
                            </a>
                            <div class="dropdown-menu">

                                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            </div>
                        </li>


                    }
                }
            </ul>
        </nav>
    </header>
    <div class="sidebar sidebar-collapse">
        <div class="sidebar-items">
            <ul>
                <li class="sidebar-item active">
                    <i class="fa fa-home" aria-hidden="true"></i>
                    <span>Home</span>
                </li>
                <li class="sidebar-item">
                    <i class="fa fa-folder-open-o" aria-hidden="true"></i>
                    <span>Create</span>
                </li>
                <li class="sidebar-item">
                    <i class="fa fa-line-chart" aria-hidden="true"></i>
                    <span>Connect</span>
                </li>
                <li class="sidebar-item">
                    <i class="fa fa-tasks" aria-hidden="true"></i>
                    <span>Share</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-body-container">
        @RenderBody()
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('.toggle-btn').click(function () {
                $('.sidebar').toggleClass('in');
            });
        });
    </script>
</body>

</html>